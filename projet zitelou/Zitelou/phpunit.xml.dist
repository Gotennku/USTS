<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/11.5/phpunit.xsd"
         bootstrap="tests/bootstrap.php"
         colors="true"
         cacheDirectory="var/.phpunit.cache"
>
    <php>
    <env name="KERNEL_CLASS" value="App\\Kernel"/>
        <!-- Utiliser la mÃªme URL mais suffix test dÃ©fini dans doctrine when@test -->
        <env name="APP_ENV" value="test"/>
    <env name="DATABASE_URL" value="sqlite:///%kernel.project_dir%/var/test.db"/>
    <!-- Override JWT keys with readable copies for tests -->
    <env name="JWT_SECRET_KEY" value="/tmp/private.test.pem"/>
    <env name="JWT_PUBLIC_KEY" value="/tmp/public.test.pem"/>
    <env name="JWT_PASSPHRASE" value=""/>
    </php>
    <testsuites>
        <testsuite name="Project Test Suite">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <coverage>
        <report>
            <clover outputFile="var/coverage/clover.xml"/>
            <html outputDirectory="var/coverage/html"/>
            <text outputFile="php://stdout" showUncoveredFiles="false"/>
        </report>
    </coverage>
    <source>
        <include>
            <directory suffix=".php">src</directory>
        </include>
        <exclude>
            <directory>var</directory>
        </exclude>
    </source>
</phpunit>
