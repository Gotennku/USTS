{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "api-platform/doctrine-orm": "^4.1",
        "api-platform/symfony": "^4.1",
        "doctrine/dbal": "^3.10.1",
        "doctrine/doctrine-bundle": "^2.15.1",
        "doctrine/doctrine-migrations-bundle": "^3.4.2",
        "doctrine/orm": "^3.5.2",
        "lexik/jwt-authentication-bundle": "^3.1",
        "nelmio/cors-bundle": "^2.5",
        "phpdocumentor/reflection-docblock": "^5.6",
        "phpstan/phpdoc-parser": "^2.3",
        "stripe/stripe-php": "^17.6.0",
        "symfony/asset": "7.3.*",
        "symfony/console": "7.3.*",
        "symfony/dotenv": "7.3.*",
        "symfony/expression-language": "7.3.*",
        "symfony/flex": "^2.8.2",
        "symfony/framework-bundle": "7.3.*",
        "symfony/mailer": "7.3.*",
        "symfony/maker-bundle": "^1.64",
        "symfony/property-access": "7.3.*",
        "symfony/property-info": "7.3.*",
        "symfony/runtime": "7.3.*",
        "symfony/security-bundle": "7.3.*",
        "symfony/serializer": "7.3.*",
        "symfony/twig-bundle": "7.3.*",
        "symfony/validator": "7.3.*",
        "symfony/yaml": "7.3.*",
        "symfonycasts/reset-password-bundle": "^1.23.2"
    },
    "require-dev": {
        "infection/infection": "^0.29.14",
        "phpstan/phpstan": "^2.1.22",
        "phpstan/phpstan-doctrine": "^2.0",
    "phpunit/phpunit": "^11.5.36",
    "friendsofphp/php-cs-fixer": "^3.87.1",
    "squizlabs/php_codesniffer": "^3.13.2",
    "symfony/browser-kit": "7.3.*",
    "symfony/http-client": "7.3.*",
    "symfony/css-selector": "7.3.*"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "infection/extension-installer": true
        },
        "bump-after-update": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": "vendor/bin/phpunit",
        "test:cov": "vendor/bin/phpunit --coverage-html var/coverage --coverage-clover var/coverage/clover.xml",
        "mutation": "vendor/bin/infection --min-msi=80 --min-covered-msi=85",
        "stan": "vendor/bin/phpstan analyse",
        "coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html var/coverage --coverage-text",
        "coverage:docker": "docker compose run --rm -e XDEBUG_MODE=coverage php composer coverage",
        "cs:fix": "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix --verbose",
        "cs:check": "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix --dry-run --diff",
        "lint:phpcs": "vendor/bin/phpcs --standard=phpcs.xml.dist -q",
        "lint:phpcs:report": "vendor/bin/phpcs --standard=phpcs.xml.dist --report=full",
        "lint:phpcs:fix": "vendor/bin/phpcbf --standard=phpcs.xml.dist"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.3.*"
        }
    }
}
